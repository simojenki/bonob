  <h1><%= it.lang("logInToBonob") %></h1>
  <form action="<%= it.loginRoute %>" method="POST">
    <div class="form-group">
      <label for="username"><%= it.lang("username") %></label>
      <input type="text" id="username" name="username" required autofocus>
